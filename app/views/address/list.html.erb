<!-- Html view file for listing addresses -->
<% if @addresses.blank? %>
<p>There are not any addresses currently in the system.</p>
<% else %>
<p>These are the current addresses in our system</p>

<ul id = "addresses">
   <% @addresses.each do |c| %>
   <li><%= link_to c.street_address + " " + c.city + ", " + c.state + " " + c.zip.to_s, {:action => 'show', :id => c.id} -%></li>
   <b> <%= link_to "Delete", {:action => 'delete', :id => c.id},
      :confirm => "Are you sure you want to delete this item?" %></b>
   <% end %>
</ul>

<% end %>
<p><%= link_to "Add new Address", {:action => 'new' }%></p>
<p><%= link_to "View People",{:controller=>'person', :action => 'list'}%></p>
