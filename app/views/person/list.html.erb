<!-- view file for list of all people -->
<% if @people.blank? %>
<p>There are not any people currently in the system.</p>
<% else %>
<p>These are the current people in our system</p>

<ul id = "people">
   <% @people.each do |c| %>
   <li><%= link_to c.first_name + " " + c.middle_name + " " + c.last_name, {:action => 'show', :id => c.id} -%></li>
   <b> <%= link_to "Delete", {:action => 'delete', :id => c.id},
      :confirm => "Are you sure you want to delete this item?" %></b>
   <% end %>
</ul>

<% end %>
<p><%= link_to "Add new Person", {:action => 'new' }%></p>
<p><%= link_to "View Addresses", {:controller => 'address', :action => 'list'}%></p>
